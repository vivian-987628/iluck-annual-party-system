<view class="container">
  <!-- 头部banner -->
  <view class="header-banner" bindtap="previewImage">
    <image class="banner-image" src="/images/banner.jpg" mode="aspectFill"></image>
    <view class="banner-overlay">
      <view class="event-title">{{eventInfo.title}}</view>
      <view class="event-meta">
        <text class="event-date">{{eventInfo.date}}</text>
        <text class="event-location">{{eventInfo.location}}</text>
      </view>
      <view class="event-status">
        <text class="status-dot"></text>
        <text class="status-text">{{eventInfo.status}}</text>
      </view>
    </view>
  </view>

  <!-- 用户信息区 -->
  <view class="user-section">
    <view class="user-info" wx:if="{{userInfo}}">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
      <view class="user-details">
        <view class="nickname">{{userInfo.nickName}}</view>
        <view class="checkin-status" wx:if="{{hasCheckin}}">
          <text class="status-icon">✓</text>
          <text>已签到</text>
        </view>
        <view class="checkin-status pending" wx:else>
          <text class="status-icon">!</text>
          <text>未签到</text>
        </view>
      </view>
    </view>
    
    <view class="login-prompt" wx:else bindtap="getUserProfile">
      <button class="login-btn">点击登录</button>
    </view>
  </view>

  <!-- 统计数据 -->
  <view class="stats-section">
    <view class="stats-grid">
      <view class="stat-item">
        <view class="stat-number">{{stats.totalEmployees}}</view>
        <view class="stat-label">总人数</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.checkedInCount}}</view>
        <view class="stat-label">已签到</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{stats.lotteryWinners}}</view>
        <view class="stat-label">中奖人数</view>
      </view>
    </view>
  </view>

  <!-- 活动列表 -->
  <view class="activities-section">
    <view class="section-title">精彩活动</view>
    <view class="activities-list">
      <view 
        class="activity-item {{item.status}}" 
        wx:for="{{activities}}" 
        wx:key="id"
        data-page="{{item.page}}"
        data-status="{{item.status}}"
        bindtap="navigateToActivity"
      >
        <view class="activity-icon">{{item.icon}}</view>
        <view class="activity-content">
          <view class="activity-title">{{item.title}}</view>
          <view class="activity-desc">{{item.desc}}</view>
        </view>
        <view class="activity-arrow">
          <text class="arrow">›</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer-section">
    <view class="footer-text">iLuck智能年会互动系统</view>
    <view class="footer-version">v1.0.0</view>
  </view>
</view>