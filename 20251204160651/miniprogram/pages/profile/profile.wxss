.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20px;
}

/* 用户信息区 */
.user-section {
  background: white;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 15px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: 2px solid #667eea;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.user-status {
  display: flex;
  align-items: center;
  gap: 5px;
}

.status-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #ccc;
}

.status-dot.checked {
  background: #52c41a;
}

.status-text {
  font-size: 14px;
  color: #666;
}

.login-prompt {
  text-align: center;
}

.login-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 25px;
  padding: 12px 40px;
  font-size: 16px;
}

/* 信息区块 */
.info-section {
  background: white;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

/* 信息卡片 */
.info-card {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.info-label {
  color: #666;
  width: 80px;
  flex-shrink: 0;
}

.info-value {
  color: #333;
  font-weight: 500;
}

/* 游戏记录 */
.record-card {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
  padding: 15px;
  border-radius: 8px;
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.record-time {
  font-size: 12px;
  color: #666;
}

.record-result {
  text-align: right;
}

.record-score {
  font-size: 18px;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 5px;
}

.record-rank {
  font-size: 12px;
  color: #52c41a;
}

/* 中奖记录 */
.prize-card {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.prize-item {
  display: flex;
  align-items: center;
  background: linear-gradient(45deg, #fff7e6, #fff2d3);
  padding: 15px;
  border-radius: 8px;
  border-left: 4px solid #faad14;
}

.prize-icon {
  font-size: 24px;
  margin-right: 15px;
}

.prize-info {
  flex: 1;
}

.prize-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.prize-time {
  font-size: 12px;
  color: #666;
}

/* 功能菜单 */
.menu-section {
  background: white;
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15px 0;
  border-bottom: 1px solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 20px;
  margin-right: 15px;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  font-size: 20px;
  color: #ccc;
  font-weight: bold;
}

/* 底部信息 */
.footer-section {
  text-align: center;
  padding: 30px 0;
}

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
}

.app-name {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.app-version {
  font-size: 12px;
  color: #999;
}